<h1>Edit Movie</h1>
<%= form_for @movie, :html => { :multipart => true } do |f| %>
<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :image %><br>
  <%= f.file_field :images, multiple: true %>
</div>

<div class="field">
  <%= f.label :Avatar %><br>
  <%= f.file_field :avatar %>
</div>

<%= f.fields_for :photos do |ff| %>
<%= f.label :photos %><br>
<%= ff.file_field :pic, multiple: true,name: "photos[pic][]" %>
<% end %>

<div class="actions">
  <%= f.submit %>
</div>
<% end -%>

<%= link_to 'Back', movies_path %>
