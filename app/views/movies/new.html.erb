<h1>New Movie</h1>
<%= form_for @movie, :html => { :multipart => true } do |f| %>
  <div class="field">
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
   <%= f.label :Image_carrier %><br>
   <%= f.file_field :images, multiple: true  %>
  </div>

  <div class="field">
  <%= f.label :avatarpapersingle  %><br>
  <%= f.file_field :avatar %>
  </div>

  <%= f.fields_for :photos do |ff| %>
  <%= f.label :photosnested %><br>
  <%= ff.file_field :pic, multiple: true,name: "photos[pic][]" %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end -%>

<%= link_to 'Back', movies_path %>
